<% include partials/header %>
<div class="ui main text container" style="padding-top: 100px">
	<div class="ui huge header">Create New Blog Post</div>
	<div class="ui top attached segment">
		<form action="/blogs" method="post" class="ui form">
			<div class="field">
				<label>Blog Title</label>
				<input type="text" name="blog[title]" placeholder="title">
			</div>
			<div class="field">
				<label>Blog Image</label>
				<input type="text" name="blog[image]" placeholder="image">
			</div>
			<div class="field">
				<label>Blog Content</label>
				<textarea name="blog[body]" required=true></textarea>
			</div>
			<button class="ui negative basic button" type="submit">Sumbit</button>
		</form>
	</div>
</div>
<% include partials/footer %>